<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/im_msg_item_normal_cc_live_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/im_msg_item_normal_cc_live_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/im_msg_text_color_black"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="nick_name"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_msg_item_normal_cc_live_img_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="3dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/im_msg_item_widget_reward_icon_owner" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/im_msg_item_normal_cc_live_fl"
        android:layout_width="256dp"
        android:layout_height="226dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_msg_item_normal_cc_live_img_cover"
            android:layout_width="256dp"
            android:layout_height="226dp"
            android:scaleType="centerInside"
            tools:src = "@drawable/im_msg_item_default_avatar"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_msg_item_normal_cc_live_ing"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:src = "@drawable/im_msg_item_live_icon"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="bottom"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="dedagwecywegawie7dgedewgdaiewdgaewdgdaewudaed"
            android:textSize="14sp"
            android:textColor="@color/im_msg_bg_color_white"
            android:id="@+id/im_msg_item_normal_cc_live_tv_title"
            android:textStyle="bold"
            android:background="@drawable/im_msg_item_cc_live_cornor_bg"
            />

    </FrameLayout>


</LinearLayout>