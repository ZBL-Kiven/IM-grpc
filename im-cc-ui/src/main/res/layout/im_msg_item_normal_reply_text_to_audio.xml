<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:maxWidth="280dp"
    android:paddingLeft="@dimen/content_margin_start"
    android:paddingTop="@dimen/content_margin_top">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message_normal_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/message_textColor_me"
        tools:text="这是回复文本！"
        android:textSize="@dimen/group_message_textSize" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Joker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/dp_4"
            android:text=":"
            android:textColor="@color/message_textColor_me"
            android:textSize="@dimen/group_message_textSize"
            android:textStyle="bold"
            />

        <com.zj.rebuild.chat.widget.GroupMessageRecordItem
            android:id="@+id/tv_message_normal_reply_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp" />







    </LinearLayout>


</LinearLayout>