<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/im_msg_item_normal_cc_video_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/im_msg_item_normal_cc_video_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_color_black"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="nick_name"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_msg_item_normal_cc_video_img_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="3dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/im_msg_item_widget_reward_icon_owner" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="256dp"
        android:layout_height="160dp"
        android:id="@+id/im_msg_item_normal_cc_video_ll_jump"
        android:layout_margin = "12dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_msg_item_normal_cc_video_img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_msg_item_normal_cc_video_img_flag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/im_msg_item_widget_reward_icon_answer_normal"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="16sp"
        android:id="@+id/im_msg_item_normal_cc_video_tv_title"
        android:textStyle="bold"
        tools:text="I'm In Paris!!!"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_msg_item_normal_cc_video_tv_time"
        android:textSize="12sp"
        tools:text="12 minutes ago"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="180dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        />
</LinearLayout>