<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:id="@+id/im_msg_item_normal_cc_video_ll_jump"
    tools:background="@color/text_color_red"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_msg_item_normal_cc_video_widget_img_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_msg_item_normal_cc_video_widget_img_flag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:src="@drawable/im_msg_item_play_small_icon"
        android:visibility="gone"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/im_msg_item_cc_video_widget_img_progressbar"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/bg_gray_70"
        android:visibility="gone"/>

</RelativeLayout>
