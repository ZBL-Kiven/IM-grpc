<?xml version="1.0" encoding="utf-8"?>
<com.zj.emotionbar.adapt2cc.CCEmojiLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_tv_conn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#cac"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="CONNECTING..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#cca"
                android:gravity="center"
                android:onClick="queryCurrent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="queryDB" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_tv_dots_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#777"
            android:textSize="12sp"
            tools:text="msg total dots:" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_fg_message_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#ccc" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_fg_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dee" />
    </LinearLayout>

</com.zj.emotionbar.adapt2cc.CCEmojiLayout>
