<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 左侧  群主回复我的消息 录音    （群主回复其他人的时候，下面一行的字体
    颜色不一样，为灰色   onlyfans 6，7，8看是否可以复用-->

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/group_message_textSize"
        android:id="@+id/tv_message_normal_ownerreplyme_text"
        android:textColor="@color/message_textColor_replyMe"
        tools:text="Just kidding, don't take it seriously😄"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/group_message_textSize"
            android:id="@+id/tv_nickname"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:textColor="@color/message_textColor_me"
            tools:text="Do you think you are joking with me？"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_flag"
            android:textSize="@dimen/group_message_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/message_textColor_me"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginEnd="4dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/group_message_textSize"
            android:id="@+id/tv_message_normal_replyme_word"
            android:textColor="@color/message_textColor_me"
            tools:text="Do you think you are joking with me？"
            />

    </LinearLayout>

</LinearLayout>