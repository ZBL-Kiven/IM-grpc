<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <!--    群主 我回复群员消息 语音-->

    <com.zj.rebuild.chat.widget.GroupMessageRecordItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_normal_replygroupmember_record"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/group_message_textSize"
            android:id="@+id/tv_nickname"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:textColor="@color/message_textColor_me"
            tools:text="Do you think you are joking with me？"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_flag"
            android:textSize="@dimen/group_message_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/message_textColor_me"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/group_message_textSize"
            android:id="@+id/tv_message_normal_replyme_word"
            android:textColor="@color/message_textColor_me"
            tools:text="Do you think you are joking with me？"
            />

    </LinearLayout>

</LinearLayout>